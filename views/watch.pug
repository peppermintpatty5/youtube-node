extends shared/layout

block append head
  title= title
  link(rel="stylesheet", href="/stylesheets/style.css")

block main
  .container
    h1= title
    .ratio.ratio-16x9.mb-3
      video.w-100.bg-black(controls)
        source(src=`/video/${id}`)
        a(href=`/video/${id}`) Download video
    ul.list-unstyled.row.g-1
      li.col-sm-6.
        Uploaded on #{ uploadDate } by
        #[a(href=`/channel/${channel.id}`)= channel.name]
      li.col-sm-6.text-sm-end
        span.fs-4 #{ viewCount } views
        #like-dislike-bar.progress.ms-sm-auto
          .progress-bar.bg-primary(style=`width: ${100 * likeRatio}%`)
        small #{ likeCount } likes / #{ dislikeCount } dislikes
    h2 Description
    p#video-description= description
