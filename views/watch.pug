extends shared/layout

block append head
  title= title
  link(rel="stylesheet", href="/stylesheets/style.css")

block main
  .container
    h1= title
    .ratio.ratio-16x9(style="background-color: black")
      video.w-100(controls)
        source(src=`/file/${id}.${ext}`)
        a(href=`/file/${id}.${ext}`) Download video
    p.
      Uploaded on #{ uploadDate } by
      #[a(href=`/channel/${channel.id}`)= channel.name]
    p #{ viewCount } views
    .progress(style="height: 5px")
      .progress-bar.bg-info(
        style=`width: ${100 * likeCount / (likeCount + dislikeCount)}%`
      )
    p #{ likeCount } likes / #{ dislikeCount } dislikes
    h2 Description
    p(style="white-space: pre-wrap")= description
