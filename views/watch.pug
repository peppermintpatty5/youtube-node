extends shared/layout

block append head
  title= video.title
  link(rel="stylesheet", href="/stylesheets/style.css")

block main
  .container
    h1= video.title
    .ratio.ratio-16x9(style="background-color: black")
      video.w-100(controls)
        source(src=`/file/${video.id}.${video.ext}`)
        a(href=`/file/${video.id}.${video.ext}`) Download video
    p.
      Uploaded on #{ video.upload_date } by
      #[a(href=`/channel/${channel.id}`)= channel.name]
    p #{ video.view_count } views
    .progress(style="height: 5px")
      .progress-bar.bg-info(
        style=`width: ${100 * video.likeCount / (video.likeCount + video.dislikeCount)}%`
      )
    p #{ video.likeCount } likes / #{ video.dislikeCount } dislikes
    h2 Description
    p(style="white-space: pre-wrap")= video.description
